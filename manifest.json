{
  "manifest_version": 3,
  "name": "Call Tracking Detector",
  "version": "1.0.0",
  "description": "Detect, analyze, and optionally block call tracking scripts on websites. Identify providers, compare original vs. tracking numbers, and test tracking behavior.",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "declarativeNetRequest",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Call Tracking Detector",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "tracking_blocklist",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["providers.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
